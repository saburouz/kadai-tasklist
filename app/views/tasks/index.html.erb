<h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
        <li><%= link_to task.id,task %> : <%= task.content %></li>
    <% end %>
</ul>

<%= link_to '新しい仕事の登録', new_task_path %>
<%= link_to 'この仕事を編集する', edit_task_path(@task)%>
<%= link_to 'この仕事を削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？'}　%>